<%- include('header.ejs') %>

<h1>문의 사항 리스트</h1>

<table border="1">
  <tr>
    <th>idx</th>
    <th>name</th>
    <th>phone</th>
    <th>email</th>
    <th>memo</th>
    <th>delete</th>
  </tr>
  <% lists.forEach(function(item) { %>
  <tr>
    <td><%= item.idx %></td>
    <td><%= item.name %></td>
    <td><%= item.phone %></td>
    <td><%= item.email %></td>
    <td><%= item.memo.replace("\n", "<br />") %></td>
    <td><%= item.regdate %></td>
    <td>
      <a
        href="/contactDelete?idx=<%= item.idx %>"
        onclick="return confirm('정말 삭제하시겠습니까?')"
        >Delete</a
      >
    </td>
  </tr>
  <% }); %>
</table>

<%- include('footer.ejs') %>
